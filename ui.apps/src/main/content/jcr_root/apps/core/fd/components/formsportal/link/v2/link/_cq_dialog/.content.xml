<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Edit Link Component"
    extraClientlibs="core.forms.components.formsportal.link.v1.editor"
    sling:resourceType="cq/gui/components/authoring/dialog"
    trackingFeature="core-components:formsportal-link:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximised="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <assetinfo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset Info"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <selectorContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <assetType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Asset Type"
                                                        name="./assetType"
                                                        granite:class="cq-dialog-dropdown-showhide">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <adaptiveform
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Adaptive Form"
                                                                value="Adaptive Form"/>
                                                            <pdf
                                                                jcr:primaryType="nt:unstructured"
                                                                text="PDF"
                                                                value="PDF"/>
                                                            <others
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Other Assets"
                                                                value="Others"/>
                                                            <external
                                                                jcr:primaryType="nt:unstructured"
                                                                text="External Link"
                                                                value="External"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".cmp-formsportal-link--editor-assetPath"/>
                                                    </assetType>
                                                </items>
                                            </selectorContainer>
                                            <field1 jcr:primaryType="nt:unstructured"
                                                granite:class="cmp-formsportal-link--editor-assetPath"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <adaptiveformPath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Adaptive Form Path"
                                                        name="./adaptiveFormPath"
                                                        nodeTypes="dam:Asset"
                                                        rootPath="/content/dam/formsanddocuments">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            filterType="Adaptive Forms"/>
                                                    </adaptiveformPath>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="Adaptive Form"/>
                                            </field1>
                                            <field2 jcr:primaryType="nt:unstructured"
                                                granite:class="cmp-formsportal-link--editor-assetPath"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <pdfPath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="PDF Path"
                                                        name="./pdfPath"
                                                        nodeTypes="dam:Asset"
                                                        rootPath="/content/dam/formsanddocuments">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            filterType="PDF"/>
                                                    </pdfPath>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="PDF"/>
                                            </field2>
                                            <field3 jcr:primaryType="nt:unstructured"
                                                granite:class="cmp-formsportal-link--editor-assetPath"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <otherAssetPath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Path"
                                                        name="./otherAssetPath"
                                                        nodeTypes="dam:Asset"
                                                        rootPath="/content/dam">
                                                    </otherAssetPath>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="Others"/>
                                            </field3>
                                            <field4 jcr:primaryType="nt:unstructured"
                                                granite:class="cmp-formsportal-link--editor-assetPath"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <externallink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="External Link"
                                                        name="./externalLinkPath">
                                                    </externallink>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="External"/>
                                            </field4>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </assetinfo>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>