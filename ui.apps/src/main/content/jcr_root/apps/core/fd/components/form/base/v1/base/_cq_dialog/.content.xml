<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title=""
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            granite:class="cmp-adaptiveform-base__editdialogbasic"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            active="{Boolean}true"
                            selected="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <name
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Name"
                                    name="./name"
                                    required="{Boolean}true">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        node-name-validation=""/>
                            </name>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Title"
                                    name="./jcr:title"/>
                            <hideTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    name="./hideTitle"
                                    text="Hide title"
                                    value="true"/>
                            <placeholder
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-base__placeholder"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Placeholder Text"
                                    name="./placeholder"/>
                            <requiredMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Error message shown when required field left empty."
                                    granite:class="cmp-adaptiveform-base__requiredmessage"
                                    fieldLabel="Required Field Message"
                                    name="./requiredMessage"/>
                            <validateExpressionMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Displayed when validation script fails."
                                    fieldLabel="Script Validation Message"
                                    name="./validateExpressionMessage"/>
                            <dataref
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="fd/af/authoring/components/granite/form/bindrefselector"
                                    emptyText="Data Model Bind Reference"
                                    fieldDescription="A valid bind reference can have alphanumeric characters, parenthesis, dot, hyphen, at the rate, forward slash, asterisk, dollar and underscore."
                                    fieldLabel="Data Model Bind Reference"
                                    name="./dataRef">
                                <granite:data
                                        jcr:primaryType="nt:unstructured"
                                        node-bindref-validation=""
                                        bindref-datamodel="fd.channelcore.dataObjectsTree.getDataModel"/>
                            </dataref>
                            <visible
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    granite:class="cmp-adaptiveform-base__visible"
                                    name="./visible"
                                    text="Hide Object"
                                    uncheckedValue="true"
                                    value="false">
                            </visible>
                            <visible-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./visible@TypeHint"
                                    value="Boolean"/>
                            <enabled
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    granite:class="cmp-adaptiveform-base__enabled"
                                    name="./enabled"
                                    text="Disable Object"
                                    uncheckedValue="true"
                                    value="false">
                            </enabled>
                            <enabled-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./enabled@TypeHint"
                                    value="Boolean"/>
                            <toBeRemoved
                                    jcr:primaryType="nt:unstructured"
                                    sling:hideResource="{Boolean}true"/>
                        </items>
                        <parentConfig
                                jcr:primaryType="nt:unstructured"
                                active="{Boolean}true"/>
                    </basic>
                    <validation
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Validation"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <required
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                checked="{Boolean}false"
                                fieldLabel="Required field"
                                labelledBy="Mandatory"
                                name="./required"
                                granite:class="cmp-adaptiveform-base__required"
                                text="Required field"
                                value="true">
                        </required>
                    </items>
                    </validation>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <shortDescription
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                              fieldLabel="Short Description"
                              name="./tooltip"
                              useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                          jcr:primaryType="nt:unstructured"
                                          height="{Long}316">
                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                        </linkDialogConfig>
                                    </links>
                                    <format
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <lists
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <justify
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <keys
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <paraformat
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <misctools
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                    <fullscreen
                                      jcr:primaryType="nt:unstructured"
                                      features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                          jcr:primaryType="nt:unstructured"
                                          toolbar="[format#bold,format#italic,format#underline,fullscreen#start]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                  jcr:primaryType="nt:unstructured"
                                                  items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                  ref="justify"/>
                                                <lists
                                                  jcr:primaryType="nt:unstructured"
                                                  items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                  ref="lists"/>
                                            </popovers>
                                        </inline>
                                        <fullscreen
                                          jcr:primaryType="nt:unstructured"
                                          toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,-,links#modifylink,links#unlink,links#anchor,tracklinks#modifylinktracking,-,justify#justifyleft,justify#justifycenter,justify#justifyright,-,image#imageProps,-,lists#unordered,lists#ordered,lists#outdent,lists#indent,-,misctools#sourceedit,fullscreen#finish]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                  jcr:primaryType="nt:unstructured"
                                                  items="styles:getStyles:styles-pulldown"
                                                  ref="styles"/>
                                                <paraformat
                                                  jcr:primaryType="nt:unstructured"
                                                  items="paraformat:getFormats:paraformat-pulldown"
                                                  ref="paraformat"/>
                                            </popovers>
                                        </fullscreen>
                                    </cui>
                                </uiSettings>
                            </shortDescription>
                            <shortDescVisible
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                              name="./tooltipVisible"
                              text="Always show short description"
                              value="true"/>
                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                    fieldLabel="Long Description"
                                    name="./description"
                                    useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                                jcr:primaryType="nt:unstructured"
                                                height="{Long}316">
                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                        </linkDialogConfig>
                                    </links>
                                    <format
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <lists
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <justify
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <keys
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <paraformat
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <misctools
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                    <fullscreen
                                            jcr:primaryType="nt:unstructured"
                                            features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format#bold,format#italic,format#underline,fullscreen#start]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                        jcr:primaryType="nt:unstructured"
                                                        items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                        ref="justify"/>
                                                <lists
                                                        jcr:primaryType="nt:unstructured"
                                                        items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                        ref="lists"/>
                                            </popovers>
                                        </inline>
                                        <fullscreen
                                                jcr:primaryType="nt:unstructured"
                                                toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,-,links#modifylink,links#unlink,links#anchor,tracklinks#modifylinktracking,-,justify#justifyleft,justify#justifycenter,justify#justifyright,-,image#imageProps,-,lists#unordered,lists#ordered,lists#outdent,lists#indent,-,misctools#sourceedit,fullscreen#finish]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        items="styles:getStyles:styles-pulldown"
                                                        ref="styles"/>
                                                <paraformat
                                                        jcr:primaryType="nt:unstructured"
                                                        items="paraformat:getFormats:paraformat-pulldown"
                                                        ref="paraformat"/>
                                            </popovers>
                                        </fullscreen>
                                    </cui>
                                </uiSettings>
                            </description>
                        </items>
                    </help>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <assistPriority
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-base__assistpriority"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    emptyText="Select"
                                    fieldLabel="Screen Reader Precedence"
                                    name="./assistPriority"
                                    value="custom">
                                <items jcr:primaryType="nt:unstructured">
                                    <empty
                                            jcr:primaryType="nt:unstructured"
                                            text=""
                                            value=""/>
                                    <customText
                                            jcr:primaryType="nt:unstructured"
                                            text="Custom Text"
                                            value="custom"/>
                                    <description
                                            jcr:primaryType="nt:unstructured"
                                            text="Description"
                                            value="description"/>
                                    <caption
                                            jcr:primaryType="nt:unstructured"
                                            text="Title"
                                            value="label"/>
                                    <name
                                            jcr:primaryType="nt:unstructured"
                                            text="Name"
                                            value="name"/>
                                    <none
                                            jcr:primaryType="nt:unstructured"
                                            text="None"
                                            value="none"/>
                                </items>
                            </assistPriority>
                            <customText
                                    jcr:primaryType="nt:unstructured"
                                    wrapperClass="cmp-adaptiveform-base__assistpriority-customtext"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldLabel="Custom Text"
                                    name="./custom"/>
                        </items>
                    </accessibility>
                    <patterns
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Formats"
                            sling:hideResource="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Display Format"
                                sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                title="Display Format">
                            <items jcr:primaryType="nt:unstructured">
                                <displayPatternType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type"
                                        name="./displayPatternType">
                                </displayPatternType>
                                <displayPictureClause
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Format"
                                        name="./displayFormat">
                                </displayPictureClause>
                            </items>
                        </displayPatternGroup>
                        </items>
                    </patterns>
                    <styletab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
