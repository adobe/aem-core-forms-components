<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Panel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/"
    trackingFeature="core-components:adaptiveform-panel:v1"
    extraClientlibs="[core.forms.components.panelcontainer.v1.editor]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        granite:class="cmp-adaptiveform-panelcontainer__editdialog">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                granite:class="cmp-adaptiveform-base__editdialogbasic"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <name
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/name"/>
                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/title"/>
                            <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Layout"
                                    name="./layout">
                                <items jcr:primaryType="nt:unstructured">
                                    <default
                                            jcr:primaryType="nt:unstructured"
                                            text="(Default)"
                                            value=""/>
                                    <simple
                                            jcr:primaryType="nt:unstructured"
                                            text="Simple"
                                            value="simple"/>
                                    <responsive
                                            jcr:primaryType="nt:unstructured"
                                            text="Responsive Grid"
                                            value="responsiveGrid"/>
                                </items>
                                <granite:rendercondition
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/renderconditions/simple"
                                        expression="${!cqDesign.layoutDisabled}"/>
                            </layout>
                            <bindref
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/bindref"/>
                            <visible
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/visible"/>
                            <visible-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/visible-typehint"/>
                            <enabled
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/enabled"/>
                            <enabled-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/basic/items/enabled-typehint"/>
                        </items>
                    </basic>
                    <repeat
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Repeat Settings"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <minItems
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue=""
                                    fieldLabel="Minimum"
                                    min="0"
                                    name="./minItems"/>
                            <maxItems
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue=""
                                    fieldLabel="Maximum"
                                    min="-1"
                                    name="./maxItems"/>
                        </items>
                    </repeat>
                    <help
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/include"
                            path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/help"/>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <assistPriority
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/accessibility/items/assistPriority"/>
                            <customText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/fd/components/form/base/v1/base/cq:dialog/content/items/tabs/items/accessibility/items/customText"/>
                            <roleAttribute
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="HTML ROLE attribute to apply to the component."
                                    fieldLabel="Role"
                                    name="./roleAttribute"
                                    value=""/>
                        </items>
                    </accessibility>
                    <style
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Style"
                            granite:hide="${!cqDesign.backgroundColorEnabled || cqDesign.backgroundColorSwatchesOnly || !cqDesign.backgroundImageEnabled}"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <backgroundColor
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/wcm/components/container/v1/container/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/backgroundColor"/>
                            <backgroundColorSwatchesOnly
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/wcm/components/container/v1/container/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/backgroundColorSwatchesOnly"/>
                            <backgroundImageAsset
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="core/wcm/components/container/v1/container/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/backgroundImageAsset"/>
                            <styleselector
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="cq/gui/components/authoring/dialog/style/tab_edit/styletab"/>
                        </items>
                    </style>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
