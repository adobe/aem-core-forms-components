<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.container.v1.editor]"
    trackingFeature="core-components:adaptiveform-container:v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/accordion">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <prefill_service
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-prefill-service-selection"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    disabled="false"
                                    emptyText="Select"
                                    fieldDescription="Select a prefill service to fetch form data when the form renders."
                                    fieldLabel="Prefill Service"
                                    name="./prefillService"
                                    renderReadOnly="false">
                                <datasource
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="core/fd/components/form/container/v1/datasource"
                                        type="prefillServiceProvider"/>
                            </prefill_service>
                            <clientLibRef
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="This client library contains JavaScript Functions which can be used in expressions supported by Adaptive Forms."
                                    fieldLabel="Client Library Category"
                                    name="./clientLibRef"/>
                            <disableSwipeGesture
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Disables the swipe gesture."
                                    name="./disableSwipeGesture"
                                    text="Disable Swipe Gesture"
                                    uncheckedValue="false"
                                    value="true"/>
                            <disableSwipeGesture-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./disableSwipeGesture@TypeHint"
                                    value="Boolean"/>
                            <enableFocusOnFirstField
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Select to keep the focus on the first field of the adaptive form or uncheck to keep the focus on the parent page or application."
                                    name="./enableFocusOnFirstField"
                                    checked="{Boolean}true"
                                    text="Set Focus on Form"
                                    uncheckedValue="false"
                                    value="true"/>
                            <enableFocusOnFirstField-typehint
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                    name="./enableFocusOnFirstField@TypeHint"
                                    value="Boolean"/>
                        </items>
                        <parentConfig
                                jcr:primaryType="nt:unstructured"
                                active="{Boolean}true"/>
                    </basic>
                    <submitActions
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Submission"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <enableAsyncSubmission
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="./enableAsyncSubmission"
                                            text="Use asynchronous submission"
                                            value="true">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.enableDisableAsyncSubmission();"
                                                af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.enableDisableAsyncSubmission();"/>
                                    </enableAsyncSubmission>
                                    <thankYouOption
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                            fieldLabel="On Submit"
                                            name="./thankYouOption">
                                        <items jcr:primaryType="nt:unstructured">
                                            <page
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Redirect to URL"
                                                    value="page"
                                                    checked="{Boolean}true">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.thankYouOptionChange();"
                                                        af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.thankYouOptionChange();"/>
                                            </page>
                                            <message
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Show Message"
                                                    value="message">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.thankYouOptionChange();"
                                                        af.listeners.onload="guidelib.touchlib.editLayer.dialogUtils.thankYouOptionChange();"/>
                                            </message>
                                        </items>
                                    </thankYouOption>
                                    <redirect
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            nodeTypes="cq:Page, dam:Asset"
                                            fieldLabel="Redirect URL/Path"
                                            rootPath="/content"
                                            name="./redirect"
                                            filter="nosystem"/>
                                    <thankYouMessage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                            fieldLabel="Message Content"
                                            value="Thank you for submitting the form."
                                            name="./thankYouMessage"
                                            useFixedInlineToolbar="{Boolean}true">
                                        <rtePlugins jcr:primaryType="nt:unstructured">
                                            <links jcr:primaryType="nt:unstructured">
                                                <linkDialogConfig
                                                        jcr:primaryType="nt:unstructured"
                                                        height="{Long}316">
                                                    <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                                </linkDialogConfig>
                                            </links>
                                            <format
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <lists
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <keys
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <misctools
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                            <fullscreen
                                                    jcr:primaryType="nt:unstructured"
                                                    features="*"/>
                                        </rtePlugins>
                                        <uiSettings jcr:primaryType="nt:unstructured">
                                            <cui jcr:primaryType="nt:unstructured">
                                                <inline
                                                        jcr:primaryType="nt:unstructured"
                                                        toolbar="[format#bold,format#italic,format#underline,fullscreen#start]">
                                                    <popovers jcr:primaryType="nt:unstructured">
                                                        <justify
                                                                jcr:primaryType="nt:unstructured"
                                                                items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                                ref="justify"/>
                                                        <lists
                                                                jcr:primaryType="nt:unstructured"
                                                                items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                ref="lists"/>
                                                    </popovers>
                                                </inline>
                                                <fullscreen
                                                        jcr:primaryType="nt:unstructured"
                                                        toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,-,links#modifylink,links#unlink,links#anchor,tracklinks#modifylinktracking,-,justify#justifyleft,justify#justifycenter,justify#justifyright,-,image#imageProps,-,lists#unordered,lists#ordered,lists#outdent,lists#indent,-,misctools#sourceedit,fullscreen#finish]">
                                                    <popovers jcr:primaryType="nt:unstructured">
                                                        <styles
                                                                jcr:primaryType="nt:unstructured"
                                                                items="styles:getStyles:styles-pulldown"
                                                                ref="styles"/>
                                                        <paraformat
                                                                jcr:primaryType="nt:unstructured"
                                                                items="paraformat:getFormats:paraformat-pulldown"
                                                                ref="paraformat"/>
                                                    </popovers>
                                                </fullscreen>
                                            </cui>
                                        </uiSettings>
                                    </thankYouMessage>
                                    <enableServerValidation
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            name="./enableServerValidation"
                                            text="Revalidate on server"
                                            value="true"/>
                                    <submitActionType
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="cmp-submit-action-selection"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Submit Action"
                                            name="./actionType">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                af.listeners.change="guidelib.touchlib.editLayer.dialogUtils.renderSubDialog(&quot;submitAction&quot;);"
                                                submit-action-validation=""/>
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/fd/components/form/container/v1/datasource"
                                                guideDataModel="basic"
                                                type="submitAction"/>
                                    </submitActionType>
                                    <actionSet
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Action Configuration"
                                            sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                            name="./submitActionSet"
                                            title="Action Configuration">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                touchUIFormActionSet="submitActionSet"/>
                                    </actionSet>
                                </items>
                            </columns>
                        </items>
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                touchUIFormSubmitAction="touchUIFormSubmitAction"/>
                    </submitActions>
                </items>
            </accordion>
        </items>
    </content>
</jcr:root>
