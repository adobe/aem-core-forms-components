<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Text Input field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.textinput.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_af_cmp_textinput_v1"
    trackingFeature="core-components:adaptiveform-textinput:v1">
    <content
        granite:class="cmp-adaptiveform-textinput__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <value
                                                    wrapperClass="cmp-adaptiveform-textinput__value"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Default value"
                                                    name="./default"/>
                                            <multiLine
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    name="./multiLine"
                                                    text="Allow multiple lines"
                                                    value="true"/>
                                            <autocomplete
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete"
                                                    fieldLabel="Autofill attribute"
                                                    forceSelection="{Boolean}true"
                                                    name="./autocomplete"
                                                    value="">
                                                <options
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete/list"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <empty
                                                            jcr:primaryType="nt:unstructured"
                                                            text=""
                                                            value=""/>
                                                    <off
                                                            jcr:primaryType="nt:unstructured"
                                                            text="off"
                                                            value="off"/>
                                                    <on
                                                            jcr:primaryType="nt:unstructured"
                                                            text="on"
                                                            value="on"/>
                                                    <name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="name"
                                                            value="name"/>
                                                    <first_x0020_name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="given-name"
                                                            value="given-name"/>
                                                    <address
                                                            jcr:primaryType="nt:unstructured"
                                                            text="street-address"
                                                            value="street-address"/>
                                                    <zip
                                                            jcr:primaryType="nt:unstructured"
                                                            text="postal-code"
                                                            value="postal-code"/>
                                                    <card_x0020_name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-name"
                                                            value="cc-name"/>
                                                    <middle_x0020_name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="additional-name"
                                                            value="additional-name"/>
                                                    <last_x0020_name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="family-name"
                                                            value="family-name"/>
                                                    <organization
                                                            jcr:primaryType="nt:unstructured"
                                                            text="organization"
                                                            value="organization"/>
                                                    <organization-title
                                                            jcr:primaryType="nt:unstructured"
                                                            text="organization-title"
                                                            value="organization-title"/>
                                                    <address-line1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-line1"
                                                            value="address-line1"/>
                                                    <address-line2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-line2"
                                                            value="address-line2"/>
                                                    <address-line3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-line3"
                                                            value="address-line3"/>
                                                    <address-level1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-level1"
                                                            value="address-level1"/>
                                                    <address-level2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-level2"
                                                            value="address-level2"/>
                                                    <address-level3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-level3"
                                                            value="address-level3"/>
                                                    <address-level4
                                                            jcr:primaryType="nt:unstructured"
                                                            text="address-level4"
                                                            value="address-level4"/>
                                                    <country
                                                            jcr:primaryType="nt:unstructured"
                                                            text="country"
                                                            value="country"/>
                                                    <country-name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="country-name"
                                                            value="country-name"/>
                                                    <cc-name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-name"
                                                            value="cc-name"/>
                                                    <cc-given-name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-given-name"
                                                            value="cc-given-name"/>
                                                    <cc-additional-name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-additional-name"
                                                            value="cc-additional-name"/>
                                                    <cc-family-name
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-family-name"
                                                            value="cc-family-name"/>
                                                    <cc-number
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-number"
                                                            value="cc-number"/>
                                                    <cc-csc
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-csc"
                                                            value="cc-csc"/>
                                                    <cc-exp-month
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-exp-month"
                                                            value="cc-exp-month"/>
                                                    <cc-exp-year
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-exp-year"
                                                            value="cc-exp-year"/>
                                                    <cc-exp
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-exp"
                                                            value="cc-exp"/>
                                                    <cc-type
                                                            jcr:primaryType="nt:unstructured"
                                                            text="cc-type"
                                                            value="cc-type"/>
                                                </items>
                                            </autocomplete>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </basic>
                    <validation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <maxLength
                                                    jcr:primaryType="nt:unstructured"
                                                    wrapperClass="cmp-adaptiveform-textinput__maxlength"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    defaultValue=""
                                                    fieldLabel="Maximum Number of characters"
                                                    min="0"
                                                    name="./maxLength"/>
                                            <maxLengthMessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Error message shown when more than maximum characters are entered."
                                                    granite:class="cmp-adaptiveform-base__maxlengthmessage"
                                                    fieldLabel="Maximum characters error message"
                                                    name="./maxLengthMessage"/>
                                            <minLength
                                                    jcr:primaryType="nt:unstructured"
                                                    wrapperClass="cmp-adaptiveform-textinput__minlength"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    defaultValue=""
                                                    fieldLabel="Minimum number of characters"
                                                    min="0"
                                                    name="./minLength"/>
                                            <minLengthMessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Error message shown when less than minimum characters are entered."
                                                    granite:class="cmp-adaptiveform-base__minlengthmessage"
                                                    fieldLabel="Minimum characters error message"
                                                    name="./minLengthMessage"/>
                                            <validationPatternGroup
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Validation Pattern"
                                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                                    title="Validation Pattern">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <validationPatternType
                                                            jcr:primaryType="nt:unstructured"
                                                            granite:class="cmp-adaptiveform-textinput__validationpattern"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Type"
                                                            name="./validationPatternType">
                                                        <datasource
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="core/fd/components/form/container/v1/datasource"
                                                                fieldType="text-input"
                                                                type="formatters"/>
                                                    </validationPatternType>
                                                    <validateFormat
                                                            jcr:primaryType="nt:unstructured"
                                                            granite:class="cmp-adaptiveform-textinput__validationformat"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Regular Expression is permitted."
                                                            fieldLabel="Pattern"
                                                            name="./pattern">
                                                    </validateFormat>
                                                    <validatePictureClauseMessage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                            fieldLabel="Error message"
                                                            name="./validatePictureClauseMessage"/>
                                                </items>
                                            </validationPatternGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </validation>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </help>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </accessibility>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
