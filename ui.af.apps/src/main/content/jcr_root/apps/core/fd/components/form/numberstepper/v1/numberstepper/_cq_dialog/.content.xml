<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Number Stepper field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.numberstepper.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_af_cmp_numberstepper_v1"
    trackingFeature="core-components:adaptiveform-numberstepper:v1">
    <content
        granite:class="cmp-adaptiveform-numberstepper__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <step
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    defaultValue="1"
                                                    fieldLabel="Add Step"
                                                    name="./step"/>
                                            <default
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    defaultValue=""
                                                    fieldLabel="Default value"
                                                    name="./default"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                            </items>
                    </basic>
                    <validation
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Validation"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <minimum
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    granite:class="cmp-adaptiveform-numberstepper__minimum"
                                                    defaultValue=""
                                                    fieldLabel="Lowest number / Smallest number"
                                                    name="./minimum"/>
                                            <minimumMessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Error message shown when entered value is less than minimum."
                                                    fieldLabel="Minimum error message"
                                                    name="./minimumMessage"/>
                                            <excludeMinimumCheck
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    granite:class="cmp-adaptiveform-numberstepper__excludeMinimumCheck"
                                                    text="Exclude minimum value"
                                                    value="true"
                                                    fieldLabel="Exclude Minimum Check"
                                                    name="./excludeMinimumCheck"/>
                                            <excludeMinimumCheck-typehint
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./excludeMinimumCheck@TypeHint"
                                                    value="Boolean"/>
                                            <exclusiveMinimum
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    granite:class="cmp-adaptiveform-numberstepper__exclusiveMinimum"
                                                    name="./exclusiveMinimum"/>
                                            <maximum
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                    granite:class="cmp-adaptiveform-numberstepper__maximum"
                                                    defaultValue=""
                                                    fieldLabel="Highest number / Largest number"
                                                    name="./maximum"/>
                                            <maximumMessage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Error message shown when entered value is more than maximum."
                                                    fieldLabel="Maximum error message"
                                                    name="./maximumMessage"/>
                                            <excludeMaximumCheck
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    granite:class="cmp-adaptiveform-numberstepper__excludeMaximumCheck"
                                                    text="Exclude maximum value"
                                                    fieldLabel="Exclude Maximum Check"
                                                    value="true"
                                                    name="./excludeMaximumCheck"/>
                                            <excludeMaximumCheck-typehint
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./excludeMaximumCheck@TypeHint"
                                                    value="Boolean"/>
                                            <exclusiveMaximum
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    granite:class="cmp-adaptiveform-numberstepper__exclusiveMaximum"
                                                    name="./exclusiveMaximum"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </validation>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
