<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Adaptive Form Date Picker"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.forms.components.datepicker.v1.editor]"
          helpPath="https://www.adobe.com/go/aem_af_cmp_datepicker_v1"
          trackingFeature="core-components:adaptiveform-datepicker:v1">
    <content
            granite:class="cmp-adaptiveform-datepicker__editdialog"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            active="{Boolean}true"
                            selected="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <default
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Default date"
                                    emptyText="YYYY-MM-DD"
                                    name="./default"/>
                        </items>
                        <parentConfig
                                jcr:primaryType="nt:unstructured"
                                active="{Boolean}true"/>
                    </basic>
                    <validation
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Validation"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <minimum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Minimum date / Start date"
                                    emptyText="YYYY-MM-DD"
                                    name="./minimumDate"/>
                            <minimumMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Error message shown when the date entered is before the minimum date"
                                    granite:class="cmp-adaptiveform-datepicker__minimummessage"
                                    fieldLabel="Minimum error message"
                                    name="./minimumMessage"/>
                            <maximum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                    fieldDescription="Please enter the date in the required format  &quot;yyyy-mm-dd&quot;."
                                    fieldLabel="Maximum date / End date"
                                    emptyText="YYYY-MM-DD"
                                    name="./maximumDate"/>
                            <maximumMessage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                    fieldDescription="Error message shown when the date entered is after the maximum date"
                                    granite:class="cmp-adaptiveform-datepicker__maximummessage"
                                    fieldLabel="Maximum error message"
                                    name="./maximumMessage"/>
                        </items>
                    </validation>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </help>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </accessibility>
                    <patterns
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Formats"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                    jcr:primaryType="nt:unstructured">
                                    <items jcr:primaryType="nt:unstructured">
                                        <displayPictureClause
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Display format"
                                                fieldDescription="The format in which the date is displayed"
                                                name="./displayFormat">
                                        </displayPictureClause>
                                    </items>
                            </displayPatternGroup>
                            <dataFormat
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="The format in which the date is to be exported or submitted"
                                    fieldLabel="Data format"
                                    name="./dataFormat">
                            </dataFormat>
                            <editFormat
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="The format to use while editing/specifying the date"
                                    fieldLabel="Edit format"
                                    name="./editFormat">
                            </editFormat>
                        </items>
                    </patterns>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
