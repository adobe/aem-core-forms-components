<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Save as Fragment"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.forms.components.panelcontainer.v1.editor]">
    <content
            granite:class="cmp-adaptiveform-saveasfragment"
            jcr:primaryType="nt:unstructured"
            jcr:title=""
            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
        <items jcr:primaryType="nt:unstructured">
            <name
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                fieldLabel="Name"
                required="{Boolean}true"
                name="name">
                <granite:data
                        jcr:primaryType="nt:unstructured"
                        node-name-validation=""/>
            </name>
            <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Title"
                    name="jcr:title">
            </title>
            <targetPath
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                    nodeTypes="nt:folder, sling:Folder, sling:OrderedFolder"
                    filter="folder"
                    fieldLabel="Target Path"
                    name="targetPath"
                    rootPath="/content/dam/formsanddocuments"/>
            <formmodel
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/include"
                    path="/libs/core/fd/components/form/container/v2/container/cq:dialog/content/items/tabs/items/dataModel/items/formmodel">
            </formmodel>
            <templateselector
                    granite:class="cmp-adaptiveform-panelcontainer__templateselector"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete"
                    emptyText="Type here or browse"
                    fieldLabel="Select Fragment Template"
                    filter="template"
                    name="templatePath"
                    required="{Boolean}true">
                <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="fd/fm/gui/components/admin/formelements/templatedataprovider"/>
                <options
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete/list"/>
                <values
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete/tags"/>
            </templateselector>
            <fragmentselectcontainer
                jcr:primaryType="nt:unstructured"
                granite:class="coral-Form-fieldwrapper cmp-adaptiveform-saveasfragment__fragmentselector-container"
                sling:resourceType="granite/ui/components/coral/foundation/container"/>
        </items>
    </content>
</jcr:root>
