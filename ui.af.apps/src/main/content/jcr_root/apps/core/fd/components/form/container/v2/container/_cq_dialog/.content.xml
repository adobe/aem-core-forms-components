<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.container.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_af_cmp_container_v2"
    trackingFeature="core-components:adaptiveform-container:v2">
    <content
        jcr:primaryType="nt:unstructured"
        granite:class="cmp-adaptiveform-container__editdialog"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <accordion
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/accordion"
              sling:hideResource="true"/>
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <prefill_service
                                                    jcr:primaryType="nt:unstructured"
                                                    granite:class="cmp-prefill-service-selection"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    disabled="false"
                                                    emptyText="Select"
                                                    fieldDescription="Select a prefill service to fetch form data when the form renders."
                                                    fieldLabel="Prefill service"
                                                    name="./prefillService"
                                                    renderReadOnly="false">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="core/fd/components/form/container/v1/datasource"
                                                        type="prefillServiceProvider"/>
                                            </prefill_service>
                                            <clientLibRef
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="This client library contains JavaScript Functions which can be used in expressions supported by Adaptive Forms."
                                                    fieldLabel="Client library category"
                                                    name="./clientLibRef"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                        <parentConfig
                                jcr:primaryType="nt:unstructured"
                                active="{Boolean}true"/>
                    </basic>
                    <dataModel
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Data Model"
                            granite:class="cmp-adaptiveform-container__datamodel"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <formmodel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <selectformmodel
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:class="cmp-adaptiveform-container__selectformmodel"
                                            fieldLabel="Form Model"
                                            name="./schemaType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <optionNone
                                                    jcr:primaryType="nt:unstructured"
                                                    text="None"
                                                    value="none"/>
                                            <optionSchema
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Schema"
                                                    value="jsonschema"/>
                                            <optionFormdatamodel
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Form Data Model"
                                                    value="formdatamodel"/>
                                        </items>
                                    </selectformmodel>
                                    <schemaRef name="./schemaRef"
                                               jcr:primaryType="nt:unstructured"
                                               sling:resourceType="granite/ui/components/coral/foundation/form/hidden"/>
                                    <schemaSelectorContainer
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="cmp-adaptiveform-container__schemaselectorcontainer">
                                        <items jcr:primaryType="nt:unstructured">
                                            <schemaSelector
                                                    granite:class="cmp-adaptiveform-container__schemaselector"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    disabled="false"
                                                    fieldLabel="Select Schema *"
                                                    validation="datamodel.config"
                                                    renderReadOnly="false">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                                        guideDataModel="basic"
                                                        layoutType="fd/af/layouts/panel"
                                                        type="xmljsonschema"/>
                                            </schemaSelector>
                                        </items>
                                    </schemaSelectorContainer>
                                    <fdmselectorcontainer
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="cmp-adaptiveform-container__fdmselectorcontainer">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fdmselector
                                                    granite:class="cmp-adaptiveform-container__fdmselector"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    disabled="false"
                                                    fieldLabel="Select Form Data Model *"
                                                    validation="datamodel.config"
                                                    renderReadOnly="false">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="fd/af/components/commons/datasources/propertyprovider"
                                                        guideDataModel="basic"
                                                        layoutType="fd/af/layouts/panel"
                                                        type="formdatamodel"/>
                                            </fdmselector>
                                        </items>
                                    </fdmselectorcontainer>
                                    <formmodelparameters
                                            granite:id="formmodelparameters"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/hidden"/>
                                </items>
                            </formmodel>
                        </items>
                    </dataModel>
                    <submitActions
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Submission"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <thankYouOption
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    wrapperClass="cmp-adaptiveform-container__thankyouoption"
                                                    fieldLabel="On submit"
                                                    name="./thankYouOption">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <page
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Redirect to URL"
                                                            value="page"
                                                            checked="{Boolean}true">
                                                    </page>
                                                    <message
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Show Message"
                                                            value="message">
                                                    </message>
                                                </items>
                                            </thankYouOption>
                                            <redirect
                                                    jcr:primaryType="nt:unstructured"
                                                    wrapperClass="cmp-adaptiveform-container__redirect"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    nodeTypes="cq:Page, dam:Asset"
                                                    fieldLabel="Redirect URL/Path"
                                                    rootPath="/content"
                                                    name="./redirect"
                                                    filter="nosystem"/>
                                            <thankYouMessage
                                                    jcr:primaryType="nt:unstructured"
                                                    wrapperClass="cmp-adaptiveform-container__thankyoumessage"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                    fieldLabel="Message content"
                                                    value="Thank you for submitting the form."
                                                    name="./thankYouMessage"
                                                    useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <links jcr:primaryType="nt:unstructured">
                                                        <linkDialogConfig
                                                                jcr:primaryType="nt:unstructured"
                                                                height="{Long}316">
                                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                                        </linkDialogConfig>
                                                    </links>
                                                    <format
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <lists
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <justify
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <keys
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <paraformat
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <misctools
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <fullscreen
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                </rtePlugins>
                                                <uiSettings jcr:primaryType="nt:unstructured">
                                                    <cui jcr:primaryType="nt:unstructured">
                                                        <inline
                                                                jcr:primaryType="nt:unstructured"
                                                                toolbar="[format#bold,format#italic,format#underline,fullscreen#start]">
                                                            <popovers jcr:primaryType="nt:unstructured">
                                                                <justify
                                                                        jcr:primaryType="nt:unstructured"
                                                                        items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                                        ref="justify"/>
                                                                <lists
                                                                        jcr:primaryType="nt:unstructured"
                                                                        items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                        ref="lists"/>
                                                            </popovers>
                                                        </inline>
                                                        <fullscreen
                                                                jcr:primaryType="nt:unstructured"
                                                                toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,-,links#modifylink,links#unlink,links#anchor,tracklinks#modifylinktracking,-,justify#justifyleft,justify#justifycenter,justify#justifyright,-,image#imageProps,-,lists#unordered,lists#ordered,lists#outdent,lists#indent,-,misctools#sourceedit,fullscreen#finish]">
                                                            <popovers jcr:primaryType="nt:unstructured">
                                                                <styles
                                                                        jcr:primaryType="nt:unstructured"
                                                                        items="styles:getStyles:styles-pulldown"
                                                                        ref="styles"/>
                                                                <paraformat
                                                                        jcr:primaryType="nt:unstructured"
                                                                        items="paraformat:getFormats:paraformat-pulldown"
                                                                        ref="paraformat"/>
                                                            </popovers>
                                                        </fullscreen>
                                                    </cui>
                                                </uiSettings>
                                            </thankYouMessage>
                                            <submitActionType
                                                    jcr:primaryType="nt:unstructured"
                                                    granite:class="cmp-adaptiveform-container__submitaction"
                                                    emptyText="Select"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Submit action"
                                                    name="./actionType">
                                                <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="core/fd/components/form/container/v1/datasource"
                                                        guideDataModel="basic"
                                                        type="submitAction"/>
                                            </submitActionType>
                                            <!-- not using granite fieldset since the dialog is not rendered correctly and we need to support old dialogs -->
                                            <actionSet
                                                    granite:class="cmp-adaptiveform-container__submitactionsettings"
                                                    wrapperClass="cmp-adaptiveform-container__submitactionsettingswrapper"
                                                    jcr:title="Action Configuration"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                                    name="./submitActionSet">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        componentPath="${requestPathInfo.suffix}"/>
                                            </actionSet>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </submitActions>
                    <dor
                            granite:class="cmp-adaptiveform-container__dortemplate"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Document of Record Template"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dortypeselector
                                                    granite:class="cmp-adaptiveform-container__dortypeselector"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    ignoreData="{Boolean}true"
                                                    fieldLabel="Select template type"
                                                    name="dortypeselector"
                                                    vertical="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="None"
                                                            value="none"/>
                                                    <selectdor
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Associate form template as the Document of Record template"
                                                            value="select">
                                                        <granite:rendercondition
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="fd/af/dor/rendercondition/selectdor"/>
                                                    </selectdor>
                                                    <generatedor
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Generate Document of Record"
                                                            value="generate"/>
                                                </items>
                                            </dortypeselector>
                                            <dortemplateselector
                                                    granite:class="cmp-adaptiveform-container__dortemplateselectorcontainer"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"/>
                                            <selecteddortype
                                                    granite:class="cmp-adaptiveform-container__dorType"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./dorType"/>
                                            <dorrefmetadata
                                                    granite:class="cmp-adaptiveform-container__dortemplateref"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./dorTemplateRef"/>
                                            <dor-template-type
                                                    granite:class="cmp-adaptiveform-container__dortemplatetype"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    name="./fd:formtype"/>
                                            <dorGenerateView
                                                    granite:class="cmp-adaptiveform-container__dorgenerateview"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"/>
                                            <dor-default-template
                                                    granite:class="cmp-adaptiveform-container__dordefaulttemplate"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    value="/libs/fd/af/dor/templates/defaultTemplate.xdp"/>
                                            <dor-sling-resourceType
                                                    granite:class="cmp-adaptiveform-container__dorslingresourcetype"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                    value="fd/af/authoring/components/dor/dorPropertiesTabs"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </dor>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
