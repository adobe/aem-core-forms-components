<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    granite:class="style-propertySheetContainer"
    granite:hidden="{Boolean}true"
    granite:id="style-propertySheetContainer"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <sidePanelHeader
            granite:class="styleSidePanelHeader"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <selectedComponentHeader
                    granite:class="styleComponentHeader"
                    jcr:primaryType="nt:unstructured"
                    jcr:title=""
                    sling:resourceType="granite/ui/components/coral/foundation/anchorbutton"
                    block="false"
                    text=""
                    variant="quiet">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        styleObjectName="themeLeftRail"/>
                </selectedComponentHeader>
                <saveCancelContainer
                    granite:class="saveCancelContainer"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <Save
                            granite:class="styleSaveButton"
                            granite:id="styleSaveButton"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            block="false"
                            disabled="{Boolean}true"
                            icon="check"
                            iconSize="S"
                            variant="primary">
                            <granite:data jcr:primaryType="nt:unstructured"/>
                        </Save>
                        <Cancel
                            granite:class="styleCancelButton"
                            granite:id="styleCancelButton"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/button"
                            block="false"
                            icon="close"
                            iconSize="S"
                            variant="minimal">
                            <granite:data jcr:primaryType="nt:unstructured"/>
                        </Cancel>
                    </items>
                </saveCancelContainer>
            </items>
        </sidePanelHeader>
        <breakPointInfoHeader
            granite:class="styleBreakPointInfoHeader"
            jcr:primaryType="nt:unstructured"
            jcr:title=""
            sling:resourceType="granite/ui/components/coral/foundation/anchorbutton"
            block="true"
            text=""
            variant="quiet">
            <granite:data jcr:primaryType="nt:unstructured"/>
        </breakPointInfoHeader>
        <states
            granite:class="style-statescontainer"
            granite:id="style-statescontainer"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form"
            style="aligned">
            <items jcr:primaryType="nt:unstructured">
                <stateName
                    granite:id="style-stateName"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    emptyText="Default"
                    fieldLabel="STATE"
                    name="style-stateName"
                    variant="quiet"
                    wrapperClass="style-stateNameWrapper">
                    <items jcr:primaryType="nt:unstructured">
                        <default
                            jcr:primaryType="nt:unstructured"
                            name="default"
                            text=""
                            value=""/>
                    </items>
                </stateName>
            </items>
        </states>
        <propertySheetContainer
            granite:id="style-propertysheet-container"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <propertySheet
                    granite:id="style-propertysheet"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form"
                    style="aligned"/>
                <viewGeneratedCSS
                    granite:id="viewGeneratedCSS"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/button"
                    size="S"
                    text="VIEW CSS"
                    variant="quiet"/>
                <imageUpload
                        granite:id="style-useasset"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="fd/af/authoring/components/granite/form/imageupload"
                        immediateUpload="{Boolean}true"
                        assetButtonText="Browse Assets"
                        async="{Boolean}true"
                        autoStart="{Boolean}true"
                        class="cq-droptarget"
                        data-assetBrowserProperty="assetBrowserHiddenInput"
                        multiple="{Boolean}false"
                        pickerTitle="Select Asset"
                        sizeLimit="{Long}100000000"
                        text="Upload"
                        title="Upload Image"
                        useHTML5="{Boolean}true"
                        wrapperClass="styleImageUploadComponent">
                    <granite:data
                            jcr:primaryType="nt:unstructured"
                            mvfield-elementproperty="imageSrc"
                            mvfield-elementtype="popoverField"/>
                </imageUpload>
                <generateTheme
                        granite:id="generateTheme"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/button"
                        size="S"
                        text="Generate Theme"
                        variant="quiet"/>
            </items>
        </propertySheetContainer>
    </items>
</jcr:root>
