<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:title="Adaptive Form reCAPTCHA"
        sling:resourceType="cq/gui/components/authoring/dialog"
        extraClientlibs="[core.forms.components.recaptcha.v1.editor]"
        helpPath=""
        trackingFeature="core-components:adaptiveform-recaptcha:v2">
    <content
            granite:class="cmp-adaptiveform-recaptcha__editdialog"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <placeholder
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="true"/>
                                            <bindref
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="true"/>
                                            <dorBindref
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideResource="true"/>
                                            <configuration
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    path="core/fd/components/form/recaptcha/v1/recaptcha/cq:dialog/content/items/tabs/items/basic/items/columns/items/column/items/configuration">
                                            </configuration>
                                            <size
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    fieldDescription="Represent data-size attribute of Google reCAPTCHA (https://developers.google.com/recaptcha/docs/invisible)"
                                                    fieldLabel="Type"
                                                    sling:orderBefore="visible"
                                                    granite:class="cmp-adaptiveform-recaptcha__size"
                                                    name="./recaptchaSize"
                                                    text="Captcha Size">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <normal
                                                            jcr:primaryType="nt:unstructured"
                                                            checked="{Boolean}true"
                                                            text="Normal"
                                                            value="normal"/>
                                                    <compact
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Compact"
                                                            value="compact"/>
                                                    <invisible
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Invisible"
                                                            value="invisible"/>
                                                </items>
                                            </size>
                                            <markOptional
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    sling:hideResource="{Boolean}true"
                                                    path="core/fd/components/form/recaptcha/v1/recaptcha/cq:dialog/content/items/tabs/items/basic/items/columns/items/column/items/markOptional">
                                            </markOptional>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </basic>
                    <validation
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Validation"
                            margin="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            path="core/fd/components/form/recaptcha/v1/recaptcha/cq:dialog/content/items/tabs/items/validation">
                    </validation>
                    <patterns
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Patterns"
                            sling:hideResource="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/container"></patterns>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:hideResource="{Boolean}true"
                            sling:resourceType="granite/ui/components/coral/foundation/container"></help>
                    <accessibility jcr:primaryType="nt:unstructured"
                                   jcr:title="Accessibility"
                                   sling:hideResource="{Boolean}true"
                                   sling:resourceType="granite/ui/components/coral/foundation/container"></accessibility>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
